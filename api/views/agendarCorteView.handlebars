<h1 class="text-center my-2" >Agendar horario</h1>

<div class="container">
            <form name="cadastro" action="/agendar/corte" method="post">  
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Informe o seu nome</label> 
                <select class="form-select" name="nomeCliente">
                {{#each listaCliente}}
                <option value= {{nomeCliente}}> {{nomeCliente}} </option>
                 {{/each }}
                </select>
            </div> 
                <div class="mb-3">
    
                <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Informe o barbeiro da sua preferencia</label>
                <select class="form-select" name="nomeBarbeiro">
                {{#each listaBarbeiro}}
                <option value={{nome}}> {{nome}} </option>
                 {{/each }}
                </select>
                </div>
                </div>
                 <div class="mb-3">
                 <label for="exampleInputEmail1" class="form-label">Selecione a Data</label>
                 <input class="form-control" type="date" name="data" id="">
                 </div>
                 <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Selecione a hora</label>
                <input class="form-control" type="time" name="hora" id="">
                </div>
                <div class="mb-5">
                <button class="btn btn-success" type="submit" id="buttonCadastro">Agendar Horario</button>
                </div>
            </form>
        </div>